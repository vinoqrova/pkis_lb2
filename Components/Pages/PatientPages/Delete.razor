@page "/patients/delete"
@using Microsoft.EntityFrameworkCore
@using lab10.Data
@inject IDbContextFactory<lab10.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удаление</PageTitle>

<h1>Удаление</h1>

<p>Вы уверены что хотите удалить?</p>
<div>
    <hr />
    @if (patient is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Имя</dt>
            <dd class="col-sm-10">@patient.PatientFirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Фамилия</dt>
            <dd class="col-sm-10">@patient.PatientLastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Отчество</dt>
            <dd class="col-sm-10">@patient.PatientMiddleName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Дата рождения</dt>
            <dd class="col-sm-10">@patient.BirthDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Пол</dt>
            <dd class="col-sm-10">@patient.Genger</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Диагноз</dt>
            <dd class="col-sm-10">@patient.Diagnos</dd>
        </dl>
        <EditForm method="post" Model="patient" OnValidSubmit="DeletePatient" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(patient is null)">Удалить</button> |
            <a href="/patients?palataid=@PalataId&?otdelenieid=@OtdelenieId">Возврат к списку палат</a>
        </EditForm>
    }
</div>

@code {
    private Patient? patient;

    [SupplyParameterFromQuery]
    private int PatientId { get; set; }

    [SupplyParameterFromQuery]
    public int? PalataId { get; set; }

    [SupplyParameterFromQuery]
    public int? OtdelenieId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        patient = await context.Patient.FirstOrDefaultAsync(m => m.PatientId == PatientId);

        if (patient is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePatient()
    {
        using var context = DbFactory.CreateDbContext();
        context.Patient.Remove(patient!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo($"/patients?palataid={PalataId}&?otdelenieid={OtdelenieId}");
    }
}
